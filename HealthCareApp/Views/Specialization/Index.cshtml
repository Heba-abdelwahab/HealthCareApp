@model IEnumerable<HealthCareApp.Models.Specialization>

@{
    ViewData["Title"] = "Index";
}

<h1>Details</h1>
<input type="text" name="name" id="searchInp" />
<input type="button" value="Search" class="btn btn-primary" id="searchBtn" onclick="SearchForSpec()" />

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DetailsByID" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="searchResults"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
            function SearchForSpec() {
        var specName = $('#searchInp').val().trim();
        var specDisplay = $('#searchResults');

        specDisplay.html("");
        // if you want to write the up 4 lines js instead of jquery no prob (and the down also)

        if (specName === "") {
            alert("Please enter a specialization name.");
            return;
        }

        $.ajax({
            url: '/Specialization/DetailsByName',
            type: 'GET',
            data: { name: specName },
            success: function (result) {
                specDisplay.html(result); 
                $('#searchInp').val("");
            },
            error: function (xhr, status, error) {
                alert('An error occurred: ' + xhr.responseText);
            }
        });
    }



