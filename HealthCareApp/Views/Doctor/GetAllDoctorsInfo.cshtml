@model List<HealthCareApp.ViewModel.Doctor.DoctorInfoVM>
@using HealthCareApp.ViewModel.Doctor

@{
    ViewData["Title"] = "Doctors";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
<style>
    body {
        background-color: #f8f9fa;
    }

    .doctor-card {
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.08);
        transition: transform 0.3s ease;
        margin-bottom: 24px;
        border: none;
        background-color: #ffffff;
    }

        .doctor-card:hover {
            transform: translateY(-5px);
        }

    .specialty-badge {
        background-color: #e3f2fd;
        color: #1976d2;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.85rem;
        display: inline-block;
        margin-bottom: 8px;
    }

    .doctor-img {
        height: 100%;
        object-fit: cover;
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
    }

    .rating-badge {
        background-color: #fff8e1;
        color: #ff9800;
        padding: 4px 8px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .card-horizontal {
        display: flex;
        flex-direction: row;
        height: 100%;
    }

        .card-horizontal .img-wrapper {
            width: 30%;
            min-width: 250px;
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
            overflow: hidden;
        }

        .card-horizontal .card-body {
            width: 70%;
            padding: 1.5rem;
        }

    .description-truncate {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 1rem;
        color: #495057;
    }

    .doctor-detail-item {
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        font-size: 0.95rem;
        color: #333;
    }

    .doctor-detail-icon {
        margin-right: 0.5rem;
        width: 20px;
        text-align: center;
        color: #6c757d;
    }

    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 1.5rem;
    }

    .doctors-count {
        font-size: 1.1rem;
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    /* Sidebar filter enhancements */
    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .form-select {
        border-radius: 8px;
    }

    .btn-outline-primary {
        margin-top: 10px;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .card-horizontal

    {
        flex-direction: column;
    }

    .card-horizontal .img-wrapper {
        width: 100%;
        border-top-right-radius: 12px;
        border-bottom-left-radius: 0;
    }

    .card-horizontal .card-body {
        width: 100%;
    }

    }
    .filter{
        background: #D0E8C5;
        padding:2rem;
        margin-bottom: 2rem;
        border-radius:10px;
    }
</style>

<div class="container py-4">
    <h2 class="text-center mb-4">All Doctors</h2>
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-md-3 filter">
            <form method="get" asp-action="GetAllDoctorsInfo">
                <h5 class="mb-3">Filter by</h5>

                <!-- Title Filter -->
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <select name="title" class="form-select">
                        <option value="">All</option>
                        <option value="Professor">Professor</option>
                        <option value="Lecturer">Lecturer</option>
                        <option value="Consultant">Consultant</option>
                        <option value="Specialist">Specialist</option>
                    </select>
                </div>

                <!-- Gender Filter -->
                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <select name="gender" class="form-select">
                        <option value="">All</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>

                <!-- Availability -->
                <div class="mb-3">
                    <label class="form-label">Availability</label>
                    <select name="availability" class="form-select">
                        <option value="">All</option>
                        <option value="today">Today</option>
                        <option value="tomorrow">Tomorrow</option>
                    </select>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <select name="price" class="form-select">
                        <option value="">All</option>
                        <option value="lt100">Less than 100</option>
                        <option value="100to200">100 - 200</option>
                        <option value="200to300">200 - 300</option>
                        <option value="gt300">More than 300</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-outline-primary w-100">Apply Filters</button>
            </form>
        </div>

        <!-- Doctors Cards -->
        <div class="col-md-9">

    <div class="row">
                <div class="row">
        <div class="col-md-2">
                <span class="doctors-count">@Model.Count Doctors</span>
        </div>
        <div class="col-md-10">
            <!--Add sorting filter here -->
                    <form method="get" asp-action="GetAllDoctorsInfo" class="d-flex justify-content-end align-items-center mb-3">
                            <input type="hidden" name="title" value="@Context.Request.Query["title"]" />
                            <input type="hidden" name="gender" value="@Context.Request.Query["gender"]" />
                            <input type="hidden" name="availability" value="@Context.Request.Query["availability"]" />
                            <input type="hidden" name="price" value="@Context.Request.Query["price"]" />

                        <label for="sortOrder" class="me-2 fw-semibold">Sort by:</label>
                        <select name="sortOrder" id="sortOrder" class="form-select w-auto me-2">
                            <option value="">Default</option>
                            <option value="rate_desc">Highest Rate</option>
                            <option value="rate_asc">Lowest Rate</option>
                            <option value="price_desc">Highest Price</option>
                            <option value="price_asc">Lowest Price</option>
                            <option value="waiting_asc">Less Waiting Time</option>
                            <option value="experience_desc">Years of Experience</option>
                        </select>
                        <button type="submit" class="btn btn-outline-primary mt-0">Sort</button>
                    </form>
        </div>
        </div>
        @foreach (var doctor in Model)
        {
            <div class="col-12 mb-4">
                <div class="card doctor-card card-horizontal">
                    <div class="img-wrapper">
                        <img src="@doctor.ProfilePicture" class="doctor-img w-100 h-100" alt="@doctor.FirstName @doctor.LastName">
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h3 class="h5 mb-1">@doctor.Title @doctor.FirstName @doctor.LastName</h3>
                                <p class="text-muted mb-0">@doctor.Specialization</p>
                            </div>
                            <span class="rating-badge">★ @doctor.Rate.ToString("0.0")</span>
                        </div>

                        @if (doctor.SubSpecializations?.Any() == true)
                        {
                            <div class="specialty-badge mb-2">
                                <i class="bi bi-award-fill me-1"></i>
                                @string.Join(", ", doctor.SubSpecializations.Take(2))
                                @if (doctor.SubSpecializations.Count > 2)
                                {
                                    <text>...</text>
                                }
                            </div>
                        }

                        <p class="card-text description-truncate">@doctor.Description</p>

                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="doctor-detail-item">
                                    <div class="doctor-detail-icon text-primary">
                                        @if (doctor.Clinics?.Any() == true)
                                        {
                                            @foreach (var c in doctor.Clinics)
                                            {
                                                <div class="d-flex align-items-center mb-1">
                                                    <i class="bi bi-geo-alt-fill me-2"></i>
                                                    <span style="white-space: nowrap;">@c.ClinicRegion - @c.ClinicAddress</span>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="doctor-detail-item">
                                    <div class="doctor-detail-icon text-success">
                                        <i class="bi bi-cash-coin"></i>
                                    </div>
                                    <div>Fees: @doctor.Fees.ToString("N0") EGP</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="doctor-detail-item">
                                    <div class="doctor-detail-icon text-info">
                                        <i class="bi bi-clock-history"></i>
                                    </div>
                                    <div>Waiting Time: @doctor.WaitingTimeInMinutes Minutes</div>
                                </div>
                                <div class="doctor-detail-item">
                                    <div class="doctor-detail-icon text-secondary">
                                        <i class="bi bi-person-badge"></i>
                                    </div>
                                    <div>Experience: @doctor.ExperienceYears Years</div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3 text-end">
                                    <a class="btn btn-primary" asp-action="ViewDoctorDetails" asp-route-doctorId="@doctor.DoctorId">View Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        }
            </div>
        </div>
    </div>
</div>
