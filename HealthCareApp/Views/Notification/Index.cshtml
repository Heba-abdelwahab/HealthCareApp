@model IEnumerable<HealthCareApp.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<!-- Custom Styling -->
<style>
    body {
        background-color: #f9f9fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        margin-top: 30px;
        margin-bottom: 30px;
        color: #333;
        text-align: center;
        font-weight: 600;
    }

    .table thead {
        background-color: #007bff;
        color: white;
    }

    table.table tr.unread,
    .table-bordered tr.unread,
    .notification-table table tr.unread {
        background-color: #e6f0ff !important;
        font-weight: 700 !important;
    }

    .table td, .table th {
        vertical-align: middle;
        text-align: center;
    }

    .action-links a {
        margin: 0 5px;
        text-decoration: none;
        color: #007bff;
        font-weight: 500;
    }

        .action-links a:hover {
            text-decoration: underline;
        }

    .notification-table {
        margin: auto;
        max-width: 1000px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        /* background: white; */
        border-radius: 10px;
        overflow: hidden;
    }

    th {
        background-color: #e6f0ff !important; /* Soft blue shade */
    }

</style>

<h1>@ViewBag.UserFirstName's Notifications</h1>

<div class="notification-table">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Message)</th>
                <th>@Html.DisplayNameFor(model => model.notificationType)</th>
                <th>@Html.DisplayNameFor(model => model.IsRead)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string rowClass = item.IsRead ? "" : "unread";
                <tr class="@rowClass">
                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                    <td>@Html.DisplayFor(modelItem => item.notificationType)</td>
                    <td>
                        <input type="checkbox" @(item.IsRead ? "checked" : "") disabled />
                    </td>
                    <td>@item.CreatedDate.ToString("g")</td>
                    <td class="action-links">
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
