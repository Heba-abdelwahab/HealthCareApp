@model HealthCareApp.ViewModels.SelectedSlotVM

@{
    ViewData["Title"] = "Create";

}

<h2 class="text-center mb-3">Reserve an Appointment</h2>

<div class="card w-50 mb-4">
    <img src="@Model.Slot.Availability.Doctor.ProfilePicture" alt="Doctor Image" class="card-img-top"/>

    <div class="card-body">
        <h2 class="card-title"> <span style="font-size:26px; color:gray">@Model.Slot.Availability.Doctor.Title</span> @Model.Slot.Availability.Doctor.FirstName @Model.Slot.Availability.Doctor.LastName</h2>
        <p class="card-text">@Model.Slot.Availability.Doctor.Description</p>
        <p class="mt-3">Date: @Model.Slot.Availability.Date.Day/@Model.Slot.Availability.Date.Month @Model.Slot.StartTime</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <input type="hidden" value="@Model.PatientId" name="patientId" />
            <input type="hidden" value="@Model.Slot.Id" name="slotId" />
            <input type="hidden" value="@Model.Slot.Availability.Doctor.Fees" name="Amount" />

            <label for="patientName" class="form-label">Patient Name: </label>
            <input type="text" id="patientName" class="form-control" name="PatientName"/><br />

            <label for="phone" class="form-label">Patient Phone: </label>
            <input type="text" id="phone" name="PatientPhone" class="form-control"/><br />

            <label for="paymentMethod">Payment Method: </label>
            <select name="paymentMethod" class="form-select" id="paymentMethod">
                <option value="Cash">Cash</option>
                <option value="Visa">Visa</option>
            </select><br />

            <div class="form-group">
                <input type="submit" value="Reserve" class="btn btn-info" class="me-5"/>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div><br />

             <div asp-validation-summary="All" class="text-danger"></div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
